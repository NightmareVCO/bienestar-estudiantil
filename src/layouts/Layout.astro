---
import Fonts from "@components/_html/Fonts.astro";
import Scripts from "@components/_html/Scripts.astro";
import Styles from "@components/_html/Styles.astro";
import Footer from "@components/navigation/footer/Footer.astro";
import GoToTop from "@components/navigation/goToTop/GoToTop.astro";
import Header from "@components/navigation/header/Header.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "PUCMM", description = "Bienestar Estudiantil" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="author" content="PUCMM" />
    <Fonts />
    <Styles />

    <title>{title}</title>
  </head>

  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
    <GoToTop />
    <Scripts />
  </body>
</html>
