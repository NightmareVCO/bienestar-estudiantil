---
import Banner from '@components/banner/Banner.astro';
import Carousel from '@components/carousel/Carousel.astro';
import DecanatoInfo from '@components/infos/DecanatoInfo.astro';
import AsideNav from '@components/navigation/asideNav/AsideNav.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout
  title="Gimnasio - Educación Física & Deportes"
  description="Decanato de Estudiantes, todos los servicios y programas de apoyo a los estudiantes de la PUCMM."
>
  <Banner
    title="Gimnasio - Educación Física & Deportes"
    path="Educación Física & Deportes / Departamento"
    origin="Inicio"
    originLink="/"
  />

  <div class="news-details-area pt-5 pb-70">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="news-details">
            <div class="news-simple-card">
              <Carousel
                images={[
                  "/images/gimnasio/santiago-club-1.webp",
                  "/images/gimnasio/santiago-club-2.webp",
                  "/images/gimnasio/santiago-club-3.webp",
                  "/images/gimnasio/santiago-club-4.webp",
                ]}
              />

              <div class="text-center">
                <h2>Body Shop Athletic Club</h2>
              </div>

              <p>
                Completa área de fitness con pesos libres, máquinas de pesas y
                cardiovasculares e implementos para entrenamiento funcional.
              </p>

              <div class="d-flex justify-content-center mb-4">
                <a
                  href="http://www.clubbodyshop.com/app/club_santiago.aspx"
                  class="default-btn-one"
                  >Body Shop Athletic Club PUCMM Santiago<i
                    class="fa-solid fa-arrow-right"></i></a
                >
              </div>

              <div class="d-flex justify-content-center mb-4">
                <a
                  href="http://www.clubbodyshop.com/app/frontpage.aspx"
                  class="default-btn-one"
                  >Body Shop Athletic Club PUCMM Santo Domingo<i
                    class="fa-solid fa-arrow-right"></i></a
                >
              </div>

              <DecanatoInfo />
            </div>
          </div>
        </div>

        <div class="col-lg-4">
          <!-- <div class="aside-sticky"> -->
          <AsideNav />
          <!-- </div> -->
        </div>
      </div>
    </div>
  </div>
</Layout>
